{
  "version": "0.2.0",
  "configurations": [{
    "type": "node",
    "request": "launch",
    "name": "server - mac",
    "runtimeExecutable": "nodemon",
    "program": "${workspaceRoot}/server/main.js",
    "cwd": "${workspaceRoot}/server",
    "restart": true,
    "console": "integratedTerminal",
    "internalConsoleOptions": "neverOpen",
    "env": {
      "NODE_CONFIG_DIR": "${env:HOME}/rgbtv"
    }
  }, {
    "type": "node",
    "request": "launch",
    "name": "server - win",
    "runtimeExecutable": "nodemon",
    "program": "${workspaceRoot}/server/main.js",
    "cwd": "${workspaceRoot}/server",
    "restart": true,
    "console": "integratedTerminal",
    "internalConsoleOptions": "neverOpen",
    "env": {
      "NODE_CONFIG_DIR": "C:\\rgbtv"
    }
  }]
}
