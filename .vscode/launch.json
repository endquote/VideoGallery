{
  "version": "0.2.0",
  "configurations": [{
    "type": "node",
    "request": "launch",
    "name": "nodemon",
    "cwd": "${workspaceRoot}/server",
    "runtimeExecutable": "nodemon",
    "runtimeArgs": [
      "--debug=5858"
    ],
    "program": "${workspaceRoot}/server/main.js",
    "restart": true,
    "port": 5858,
    "console": "integratedTerminal",
    "internalConsoleOptions": "neverOpen"
  }, {
    "type": "node",
    "request": "launch",
    "name": "Launch Program",
    "program": "${workspaceRoot}/main.js",
    "cwd": "${workspaceRoot}/server"
  }, {
    "type": "node",
    "request": "attach",
    "name": "Attach to Process",
    "port": 5858
  }]
}
