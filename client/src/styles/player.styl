@import "main.styl"

progress-height = 1vh
info-margin = 30px
qr-size = 100px

body
    user-select none
    overflow hidden
    font-family 'Source Sans Pro', sans-serif

#video-player
    background-color black
    position absolute
    top 0
    left 0
    bottom 0
    right 0

#video-info
    background-color rgba(1, 1, 1, .5)
    color white
    position absolute
    left 0
    right 0
    bottom -25vh - progress-height
    height 25vh + progress-height

#video-qr-code
    position absolute
    top info-margin
    right info-margin

#video-info-content-container
    position absolute
    left info-margin
    top @left
    right @left * 2 + qr-size
    bottom @left

#video-info-content
    overflow hidden
    column-count 3
    column-gap (info-margin / 2)
    column-fill auto
    height 100%

#video-info-author-title
    column-span all
    margin-bottom (info-margin / 2)

#video-info-title
    text-overflow ellipsis
    white-space nowrap
    overflow hidden
    margin 0

#video-info-author
    float right
    margin 0
    margin-left info-margin
    margin-top .3em
    max-width 25%
    text-overflow ellipsis
    white-space nowrap
    overflow hidden
    
#video-info-description
    margin 0

#video-info.shown
    bottom 0

#video-progress
    background-color white
    position absolute
    left 0
    bottom 0
    height progress-height
    opacity .5

#controller-status
    position absolute
    right 0
    bottom 0px
    left 0px
    width 10px
    height (progress-height / 2)
    background-color black
    visibility hidden

#controller-status.shown
    visibility visible

#controller-battery
    height 100%
    width 0
    background-color white

#click-target
    background-color transparent
    position absolute
    top 0
    left 0
    bottom 0
    right 0

video
    width 100%
    height 100%
